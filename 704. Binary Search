// Function to perform binary search
int search(int* arr, int n, int key) {
    int low = 0, high = n - 1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (arr[mid] == key)
            return mid;          // Element found
        else if (arr[mid] < key)
            low = mid + 1;       // Move to right half
        else
            high = mid - 1;      // Move to left half
    }

    return -1;  // Element not found
}
