class Solution {
public:
    int mySqrt(int x) {
         if (x == 0 || x == 1) return x;

        long long low = 1, high = x, ans = 0;

        while (low <= high) {
            long long mid = low + (high - low) / 2;

            if (mid * mid == x) {
                return mid;
            }
            else if (mid * mid < x) {
                ans = mid;        // mid is a possible answer
                low = mid + 1;    // try for a bigger one
            } 
            else {
                high = mid - 1;   // mid*mid > x, go left
            }
        }
        return ans;
    }
};
